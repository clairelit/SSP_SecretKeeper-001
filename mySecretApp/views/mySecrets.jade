doctype html
html
	head
		meta(http-equiv='cache-control', content='no-store')
		title My Secrets
	body
		h1 Welcome to your secrets page
		for newSecret, i in secretsArray
			p #{individualSecret}
			
		form(method='get' action='/addNewSecret')
		h1 My Secrets:
			input(type='text', name='secret')
			br
			input(type='submit', value='Submit')
