doctype html
html
	head
		meta(http-equiv='cache-control', content= 'no-store')
		title My secrets
	body
		h1 Welcome to your secrets page
		for secret, i in secrets
			p #{secret.secret}
		else
			p You have no secrets!!!

			form(method='get' action='/addNewSecret')
				h1 My Secrets:
				input(type='text', name='secretText')
				br
				input(type='submit', value='Submit')
