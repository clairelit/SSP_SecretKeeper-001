  body

    .brand All My Secrets
    .container
        .row
          .box
            .col-lg-12
              hr
              h2.intro-text.text-center
                h1 Oops, your login details appear to be incorrect!
                h2 Please try again
              hr
            .col-md-6
              img.img-responsive.img-border-left(src='img/slide-2.jpg', alt='')
            .col-md-6
            a(href='/register') Register
            form(action='/login', method='post')
              label(for='login') Username:
              br
              input(name='userName')
              br
              label(for='password') Password:
              br
              input(type='password', name='password')
              br
              br
              input(type='submit', value='submit')
            .clearfix
